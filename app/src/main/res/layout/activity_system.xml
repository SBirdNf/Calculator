<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SystemActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="进制转换器"
        android:textSize="35dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输入数据"
        android:textSize="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sys_tv_1"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="进制类型"
            android:textSize="25dp"
            />

        <Spinner
            android:id="@+id/sys_sp_1"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:textSize="30dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/sys_et_shuru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="输出数据"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sys_tv_2"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="进制类型"
            android:textSize="25dp"/>
        <Spinner
            android:id="@+id/sys_sp_2"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:textSize="30dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/sys_et_shuchu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_gravity="center|bottom">

        <Button
            android:id="@+id/sys_btn0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>

        <Button
            android:id="@+id/sys_btn4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>

        <Button
            android:id="@+id/sys_btn8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btn9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnA"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="A"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnB"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="B"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>

        <Button
            android:id="@+id/sys_btnC"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnD"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="D"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnE"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="E"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnF"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="F"
            android:textSize="45dp"
            android:textColor="#fff"
            android:background="@drawable/btn"/>

    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sys_btnCE"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="CE"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnJS"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="计算"
            android:background="@drawable/btn"/>
        <Button
            android:id="@+id/sys_btnFH"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="返回"
            android:background="@drawable/btn"/>

    </LinearLayout>

</LinearLayout>